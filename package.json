{
	"name": "stardew-save-editor",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dump": "tsx --no-warnings codegen/dump.ts",
		"lint": "biome lint ./src && tsc --noEmit",
		"lint:fix": "biome lint ./src --fix && tsc --noEmit",
		"format": "prettier --log-level silent src && biome check ./src",
		"format:fix": "prettier --log-level silent --write src && biome check ./src --fix --unsafe",
		"test": "vitest run",
		"emulate:webkit": "node test/webkit.js"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@sentry/sveltekit": "^8.55.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@testing-library/svelte": "^5.2.4",
		"@thisux/sveltednd": "^0.0.16",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/node": "^18.19.59",
		"@types/wicg-file-system-access": "^2020.9.6",
		"@vitest/web-worker": "^2.1.8",
		"comlink": "^4.4.2",
		"fast-xml-parser": "^4.5.0",
		"happy-dom": "^15.11.6",
		"idb": "^7.1.1",
		"image-dimensions": "^2.3.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"string-similarity-js": "^2.1.4",
		"svelte": "^5.16.1",
		"svelte-check": "^4.1.1",
		"tslib": "^2.4.1",
		"tsx": "^4.19.1",
		"typescript": "^5.0.0",
		"vite": "^6.0.7",
		"vitest": "^2.1.4",
		"vitest-indexeddb": "^0.0.0"
	},
	"optionalDependencies": {
		"playwright": "^1.49.1"
	},
	"type": "module"
}
